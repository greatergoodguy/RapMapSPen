<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.burstingbrains.rapmap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/theme_sadcrow" >
        <activity
            android:name="com.burstingbrains.rapmap.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.burstingbrains.rapmap.trunk.SPen_Example_ImageClip_MiniEditor"
			android:hardwareAccelerated="false"
			android:configChanges="locale|orientation|keyboard|screenSize|keyboardHidden|uiMode"
			android:theme="@android:style/Theme.Dialog" />
        
		<activity android:name="com.burstingbrains.rapmap.SPen_Example_ScratchBoard"
			android:hardwareAccelerated="false"
			android:configChanges="locale|orientation|keyboard|screenSize|keyboardHidden|uiMode"/>
		
		<!--  Tools  -->		
		<activity android:name="com.burstingbrains.rapmap.trunk.ToolListActivity"
			android:configChanges="locale|orientation|keyboard|screenSize|keyboardHidden|uiMode" />
            
    </application>

</manifest>
